generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int      @id @default(autoincrement())
  discordId   String   @unique
  displayName String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  roles      UserRoles?
  Submission Submission[]
}

model UserRoles {
  userId  Int     @unique
  isAdmin Boolean @default(false)

  user Users @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
}

model Events {
  id        Int      @id @default(autoincrement())
  fullName  String
  shortName String
  startTime DateTime
  published Boolean  @default(false)
  canSubmit Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Submission Submission[]
}

model Submission {
  id      Int @id @default(autoincrement())
  userId  Int
  eventId Int

  user  Users  @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  event Events @relation(fields: [eventId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  SubmissionAvailability SubmissionAvailability[]

  @@unique([userId, eventId])
}

model SubmissionAvailability {
  id           Int      @id @default(autoincrement())
  submissionId Int
  from         DateTime
  to           DateTime

  submission Submission @relation(fields: [submissionId], references: [id], onUpdate: Cascade, onDelete: Cascade)
}
